# Time-Series Anomaly Detection Multi-Agent System Configuration
# Copy this file to .env and update with your actual values

# REQUIRED: Google AI API Key
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=

# LLM Configuration
LLM_MODEL=gemini-2.5-flash #gemini-2.0-flash
LLM_TEMPERATURE=0.1
ENABLE_LLM=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Data Processing Configuration
DEFAULT_Z_SCORE_THRESHOLD=3.01
DEFAULT_IQR_MULTIPLIER=1.5
DEFAULT_ROLLING_IQR_MULTIPLIER=1.5
DEFAULT_ROLLING_IQR_WINDOW=20
DEFAULT_DBSCAN_EPS=0.5
DEFAULT_DBSCAN_MIN_SAMPLES=5

# File Storage Configuration
DATA_DIR=./data
OUTPUT_DIR=./outputs
PLOTS_DIR=./outputs/plots

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
DEBUG=false

# LangChain Configuration (for debugging)
LANGCHAIN_VERBOSE=false
LANGCHAIN_DEBUG=false

# Development Configuration
RELOAD=false

# NEW: Multi-Turn Conversation Configuration
# Admin & Security
ADMIN_PASSWORD=
UI_SECRET_KEY=

# Conversation Settings
CONVERSATION_TIMEOUT_MINUTES=120
MAX_CONCURRENT_SESSIONS=100
ENABLE_CONVERSATION_LOGGING=true

# File Upload Settings
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE_MB=10

# Streamlit UI Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HOST=0.0.0.0